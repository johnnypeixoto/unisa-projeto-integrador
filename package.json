{
  "name": "pomodorotech",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "author": "Johnny Peixoto",
  "description": "A Pomodoro timer application built with Electron and React",
  "homepage": ".",
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "electron": "electron public/electron.js",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-build": "npm run build && electron-builder",
    "electron-build:win": "npm run build && electron-builder --win",
    "electron-build:mac": "npm run build && electron-builder --mac",
    "electron-build:linux": "npm run build && electron-builder --linux"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "build": {
    "appId": "com.pomodorotech.app",
    "productName": "Pomodorotech",
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "public/icons/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "public/icons",
        "to": "build/icons",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "buildResources": "public/icons"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "public/icons/icon.ico",
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "public/icons/icon.ico",
      "uninstallerIcon": "public/icons/icon.ico",
      "installerHeaderIcon": "public/icons/icon.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "shortcutName": "Pomodoro Timer"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^39.2.0",
    "electron-builder": "^26.0.12"
  }
}
